<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="BrowserStack Parallel Suite" parallel="tests" thread-count="5" guice-stage="DEVELOPMENT">

  <!--Windows - Chrome -->
  <test name="Windows_Chrome">
    <parameter name="os" value="Windows"/>
    <parameter name="os_version" value="11"/>
    <parameter name="browser" value="Chrome"/>
    <parameter name="browser_version" value="latest"/>
    <parameter name="device" value=""/>
    <parameter name="real_mobile" value="false"/>
    <classes>
      <class name="testcases.BrowserStack"/>
    </classes>
  </test>

  <!--Mac - Firefox -->
  <test name="Mac_Firefox">
    <parameter name="os" value="OS X"/>
    <parameter name="os_version" value="Monterey"/>
    <parameter name="browser" value="Firefox"/>
    <parameter name="browser_version" value="latest"/>
    <parameter name="device" value=""/>
    <parameter name="real_mobile" value="false"/>
    <classes>
      <class name="testcases.BrowserStack"/>
    </classes>
  </test>

  <!--Windows - Edge -->
  <test name="Windows_Edge">
    <parameter name="os" value="Windows"/>
    <parameter name="os_version" value="10"/>
    <parameter name="browser" value="Edge"/>
    <parameter name="browser_version" value="latest"/>
    <parameter name="device" value=""/>
    <parameter name="real_mobile" value="false"/>
    <classes>
      <class name="testcases.BrowserStack"/>
    </classes>
  </test>

  <!--Samsung Galaxy S23 -->
  <test name="Galaxy_S23">
    <parameter name="os" value="Android"/>
    <parameter name="os_version" value="13"/>
    <parameter name="browser" value="Chrome"/>
    <parameter name="browser_version" value="latest"/>
    <parameter name="device" value="Samsung Galaxy S23"/>
    <parameter name="real_mobile" value="true"/>
    <classes>
      <class name="testcases.BrowserStack"/>
    </classes>
  </test>

  <!--iPhone 15 -->
  <test name="iPhone_15">
    <parameter name="os" value="iOS"/>
    <parameter name="os_version" value="17"/>
    <parameter name="browser" value="Safari"/>
    <parameter name="browser_version" value="latest"/>
    <parameter name="device" value="iPhone 15"/>
    <parameter name="real_mobile" value="true"/>
    <classes>
      <class name="testcases.BrowserStack"/>
    </classes>
  </test>

</suite>
